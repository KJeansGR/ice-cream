<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <script src="//code.jquery.com/jquery-3.7.1.js"></script>
    <script src="//cdn.datatables.net/2.3.7/js/dataTables.js"></script>

    <link rel="stylesheet" href="//cdn.datatables.net/2.3.7/css/dataTables.dataTables.css">
    <link rel="icon" href="/images/ice-cream-favicon.png">
    <title>Admin Page</title>
</head>
<body>
    
   <table id="order-table" class="display">
        <thead>
            <tr>
                <th> Time</th>
                <th> Customer</th>
                <th> Email</th>
                <th>Flavor</th>
                <th>Cone</th>
                <th>Toppings</th>   
            </tr>
        </thead>
        <% orders.forEach(order => {%>
            <tr>
            <% Object.entries(order).forEach(o => {%>
            <td><%= o[1] %></td>
           <% })%>               
            </tr>
        <% })%>
   </table>
    <script defer>
        let table = new DataTable('#order-table');
    </script>

</body>
</html>